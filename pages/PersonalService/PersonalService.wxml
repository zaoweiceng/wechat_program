  <view class="page__hd">
  <view class="page__desc" style = "font-weight:600; font-size: 50rpx; text-align:center">个人中心</view>
  <view class="user">
     <image class="user_image" src="/images/PersonalService/login.png"></image>
    <view class="page__title">{{user_name}}</view>
    
  </view>
  </view>
  <view class="page__bd">
    <view class="weui-grids">
        <navigator url = "/pages/PersonalService/favorite/favorite" class="weui-grid" hover-class="weui-grid_active">
