        </navigator>
         <navigator url="/pages/PersonalService/personalifo/personalifo" class="weui-grid" hover-class="weui-grid_active">
          <image class="weui-grid__icon" src="/images/PersonalService/personalifo.png" />
          <view class="weui-grid__label">个人信息</view>
        </navigator>
         <navigator url="/pages/PersonalService/question/question" class="weui-grid" hover-class="weui-grid_active">
          <image class="weui-grid__icon" src="/images/PersonalService/que.png" />
          <view class="weui-grid__label">常见问题</view>
        </navigator>
                <navigator url="/pages/PersonalService/feedback/feedback" class="weui-grid" hover-class="weui-grid_active">
          <image class="weui-grid__icon" src="/images/PersonalService/back.png" />
          <view class="weui-grid__label">反馈</view>
        </navigator>
    </view>
  </view>
</view>

